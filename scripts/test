#!/bin/bash

test="${1}"
case "${test}" in
  test/pipe)
    ${test} pull &
    sleep .5
    ${test} push
    ;;

  test/radio)
    ${test} node0 &
    sleep .5
    ${test} node1
    ;;

  test/topic)
    ${test} server &
    pid=$!
    trap "kill ${pid} && exit" SIGTERM SIGINT
    sleep .5
    for i in {1..10}; do
      ${test} client
      sleep .01
    done
    kill ${pid}
    ;;

  *)
    ${test}
    ;;
esac

rc=$?
wait
exit $?

